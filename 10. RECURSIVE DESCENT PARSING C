#include <stdio.h>
#include <ctype.h>

char input[100];
int pos = 0;

void error() {
    printf("Syntax error\n");
    // You can add further error handling here
}

void match(char expected) {
    if (input[pos] == expected) {
        pos++;
    } else {
        error();
    }
}

void factor();
void term();
void expression();

void factor() {
    if (isdigit(input[pos])) {
        match(input[pos]);
    } else if (input[pos] == '(') {
        match('(');
        expression();
        match(')');
    } else {
        error();
    }
}

void term() {
    factor();
    while (input[pos] == '*' || input[pos] == '/') {
        if (input[pos] == '*') {
            match('*');
            factor();
        } else if (input[pos] == '/') {
            match('/');
            factor();
        }
    }
}

void expression() {
    term();
    while (input[pos] == '+' || input[pos] == '-') {
        if (input[pos] == '+') {
            match('+');
            term();
        } else if (input[pos] == '-') {
            match('-');
            term();
        }
    }
}

int main() {
    printf("Enter an arithmetic expression: ");
    fgets(input, sizeof(input), stdin);

    expression();
    
    if (input[pos] == '\n' || input[pos] == '\0') {
        printf("Valid syntax\n");
    } else {
        error();
    }

    return 0;
}
